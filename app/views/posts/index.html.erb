<div class="jumbotron">
<div class="form-group">
<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search",class:"btn btn-primary" %>
<% end %>
<%=link_to 'featured',featured_path, class:"btn btn-primary" %>
<%=link_to 'Popular',popular_path, class:"btn btn-primary" %>
</div>
<div class="container">
  <% @posts.each do |post| %>
    <h3><%= link_to post.title,post %></h3>
    <p><%= post.description %></p></br>
    </span><%= time_ago_in_words(post.created_at) %><span>
    <i class="glyphicon glyphicon-circle-arrow-up"><%=post.thumbs_up_total %></i>
    <i class="glyphicon glyphicon-circle-arrow-down"><%=post.thumbs_down_total %></i>
  <%end %>
</div>
</div>